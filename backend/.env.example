# GreenCompass Backend - Deployment Environment
# Copy this file to .env and configure for your environment

# Server Configuration
PORT=3001
NODE_ENV=production

# Network Configuration (for VM deployment)
# Replace with your VM's IP address
HOST=0.0.0.0
VM_IP=192.168.1.100

# CORS Configuration  
FRONTEND_URL=*

# AI Configuration - REQUIRED for intelligent menu discovery
GEMINI_API_KEY=your_gemini_api_key_here

# Security
API_KEY=your_secret_api_key_here

# Performance Tuning (updated for better servers)
MAX_CONCURRENT_PAGES=10
BROWSER_TIMEOUT=300000
REQUEST_TIMEOUT=45000

# Rate Limiting (increased limits)
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=info
DEBUG_MODE=false
